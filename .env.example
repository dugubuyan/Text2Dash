# LLM配置
# Gemini API Key (Google)
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 默认模型
DEFAULT_MODEL=gemini/gemini-2.0-flash

# 数据库配置
CONFIG_DB_PATH=./data/config.db
TEMP_DB_PATH=./data/temp_data.db

# 加密密钥（用于加密数据库密码和MCP认证信息）
# ENCRYPTION_KEY=your_encryption_key_here

# 后端服务器配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
# 生产模式：使用多进程提升性能（建议设置为 CPU 核心数）
BACKEND_WORKERS=4

# 前端服务器配置（Vite开发服务器）
VITE_PORT=5173
VITE_BACKEND_URL=http://localhost:8000

# 前端API配置（生产环境使用，开发环境留空使用代理）
# VITE_API_BASE_URL=https://your-backend-domain.com/api

# 日志配置
# 开发模式：debug 或 info，生产模式：warning 或 error
LOG_LEVEL=warning
LOG_FILE=./logs/app.log

# Mem0配置（可选）
# USE_MEM0: 是否启用Mem0长期记忆功能
# - true: 启用（会增加6-14秒的会话保存时间，适合需要长期记忆的场景）
# - false: 禁用（推荐，性能提升1400倍，会话保存时间从14秒降至0.01秒）
USE_MEM0=false
MEM0_API_KEY=your_mem0_api_key_here
